// ==========================================
// 1. GENERATOR & DATASOURCE
// ==========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// 2. MODEL USER & AUTHENTICATION
// ==========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("USER") // "USER", "ADMIN", "CONSULTANT"

  accounts Account[]
  sessions Session[]

  // --- RELASI UNTUK FITUR PLATFORM (The Lab & The Guild) ---
  heroProfile    HeroProfile?
  clientProjects ClientProject[] @relation("ClientProjects")
  questProjects  ProjectMember[] @relation("HeroProjects")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// 3. MODEL AGENCY (Blog, Kontak, Team, Portfolio)
// ==========================================

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String?  @db.Text
  content   String   @db.Text
  imageUrl  String?
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author   String? @default("Admin")
  category String? @default("Umum")

  ctaText String?
  ctaLink String?
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  status    String   @default("UNREAD") // UNREAD, READ
  createdAt DateTime @default(now())
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  name      String
  role      String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

// Digunakan di Homepage & Portfolio Page
model PortfolioProject {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  category    String?  // Web, Mobile, UI/UX
  imageUrl    String?
  link        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Digunakan di Homepage (Skills Section)
model Skill {
  id   Int     @id @default(autoincrement())
  name String
  icon String? // Bisa path SVG atau nama icon
}

// Digunakan di Halaman Jobs
model JobApplication {
  id           String   @id @default(cuid())
  fullName     String
  email        String
  phone        String
  location     String
  hasWorkspace Boolean
  experience   String   @db.Text
  status       String   @default("NEW") // NEW, REVIEWING, REJECTED, HIRED
  createdAt    DateTime @default(now())
}

// ==========================================
// 4. MODEL PLATFORM (The Lab & The Guild)
// ==========================================

// Profil "Hero" untuk Consultant/Freelancer
model HeroProfile {
  id            String  @id @default(cuid())
  nickname      String
  isAvailable   Boolean @default(true)
  
  // RPG Stats
  statSpeed     Int     @default(50)
  statLogic     Int     @default(50)
  statAesthetic Int     @default(50)
  tier          String  @default("Specialist") // Specialist, Elite, Legend
  xp            Int     @default(0)

  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Project yang dibuat oleh Client (The Lab)
model ClientProject {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  totalRate   Float    @default(0)
  status      String   @default("NEGOTIATION") // NEGOTIATION, ACTIVE, COMPLETED
  
  clientId    String
  client      User     @relation("ClientProjects", fields: [clientId], references: [id])
  
  members     ProjectMember[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Anggota squad/party dalam sebuah Project
model ProjectMember {
  id        String        @id @default(cuid())
  projectId String
  project   ClientProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  heroId    String
  hero      User          @relation("HeroProjects", fields: [heroId], references: [id])
  
  joinedAt  DateTime      @default(now())
}

// ==========================================
// 5. NEXTAUTH BOILERPLATE
// ==========================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// 6. MODEL LAYANAN (SERVICES)
// ==========================================
// Digunakan di halaman Services / Solutions

model Service {
  id               String   @id @default(cuid())
  title            String
  category         String
  image            String?
  shortDescription String?
  description      String?  @db.Text
  
  // Array String (Fitur PostgreSQL)
  techStack        String[] 
  features         String[]
  useCases         String[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}