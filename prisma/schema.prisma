// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // [cite: 157]
  url      = env("DATABASE_URL")
}

// === MODULE: AGENCY (PUBLIC WEBSITE) ===
// Untuk menggantikan hardcoded data di page.tsx

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  role        String
  image       String
  description String   @db.Text
  order       Int      @default(0)
}

model Skill {
  id               String   @id @default(cuid())
  title            String
  category         String
  image            String
  shortDescription String
  description      String   @db.Text
  techStack        String[] // Array of strings for tags
  features         String[]
  useCases         String[]
}

model PortfolioProject {
  id               String   @id @default(cuid())
  title            String
  category         String
  client           String
  image            String
  shortDescription String
  description      String   @db.Text
  duration         String
  challenges       String[]
  solutions        String[]
  results          Json     // Simpan array object {value, label} sebagai JSON
  techStack        String[]
  createdAt        DateTime @default(now())
}

model JobApplication { // [cite: 251]
  id             String    @id @default(cuid())
  fullName       String
  email          String
  phone          String
  location       String
  hasWorkspace   Boolean
  experience     String?   @db.Text
  status         String    @default("NEW")
  createdAt      DateTime  @default(now())
}

// === MODULE: PLATFORM (AUTH & APP) ===
// Sesuai Tech Guide v3.1 [cite: 166-240]

enum Role {
  CLIENT
  CONSULTANT
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          Role      @default(CLIENT)
  createdAt     DateTime  @default(now())
  
  // Relations
  heroProfile   HeroProfile?
  projects      Project[]
  assignedQuests Quest[]
}

model HeroProfile {
  id            String  @id @default(cuid())
  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id])
  nickname      String
  tier          String  @default("BRONZE") // Simplified enum for now
  statSpeed     Int     @default(5)
  statLogic     Int     @default(5)
  statAesthetic Int     @default(5)
  xp            Int     @default(0)
}

model Project {
  id          String   @id @default(cuid())
  name        String
  clientId    String
  client      User     @relation(fields: [clientId], references: [id])
  status      String   @default("DRAFTING")
  quests      Quest[]
}

model Quest {
  id           String   @id @default(cuid())
  title        String
  description  String
  loot         Float
  xpReward     Int
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id])
  assignedToId String?
  assignedTo   User?    @relation(fields: [assignedToId], references: [id])
}